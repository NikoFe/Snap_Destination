{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json" 
  },
  "storage": { 
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8082
    },
    "auth": {
      "port": 9099
    },
    "scheduler": {
      "port": 9091
    },
        "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "singleProjectMode": true
  },
  "ui": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 4000
  }
}